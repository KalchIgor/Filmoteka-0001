const watched = JSON.parse(localStorage.getItem(KEY_WATCHED)) || [];
const queue = JSON.parse(localStorage.getItem(KEY_QUEUE)) || [];
// Denis's buttons
const addWatchedRef = document.querySelector('[addToWatched]');
const addQueueRef = document.querySelector('[addToQueue]');

// Mykola's buttons
const watchedRef = document.querySelector('[watched-btn]');
const queueRef = document.querySelector('[queue-btn]');

addWatchedRef.addEventListener('click', onAddToWatched);
addQueueRef.addEventListener('click', onAddToQueue);

watchedRef.addEventListener('click', showWatched);
queueRef.addEventListener('click', showQueue);

function setWatchedLocalStoradge(watched) {
  localStorage.setItem(KEY_WATCHED, JSON.stringify(watched));
}

function setQueueLocalStoradge(queue) {
  localStorage.setItem(KEY_QUEUE, JSON.stringify(queue));
}
